#!/usr/bin/env node

/**
 * Automation Runner
 * Runs common automation tasks
 */

import { execSync } from 'child_process';
import fs from 'fs';
import path from 'path';

const BASE_DIR = '/Users/rebeccalemke/cathedral-master-deployment';

const AUTOMATIONS = {
  'daily': [
    { name: 'Health Check', command: 'pnpm run health:check' },
    { name: 'Code Quality', command: 'pnpm run check:quality' },
    { name: 'Dependency Check', command: 'pnpm run check:dependencies' }
  ],
  'weekly': [
    { name: 'Full System Check', command: 'pnpm run check:all' },
    { name: 'Security Scan', command: 'pnpm run security:scan' },
    { name: 'Cleanup Old Backups', command: 'node tools/backup-manager.mjs cleanup 7' }
  ],
  'pre-commit': [
    { name: 'TypeScript Build', command: 'pnpm run build:scripts' },
    { name: 'Lint', command: 'pnpm run lint' },
    { name: 'Format', command: 'pnpm run format' }
  ],
  'pre-push': [
    { name: 'Full Build', command: 'pnpm run build' },
    { name: 'All Checks', command: 'pnpm run check:all' },
    { name: 'Tests', command: 'pnpm run test' }
  ]
};

async function runAutomation(type) {
  const tasks = AUTOMATIONS[type];
  if (!tasks) {
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.error(`‚ùå Unknown automation type: ${type}`);
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log(`Available types: ${Object.keys(AUTOMATIONS).join(', ')}`);
    process.exit(1);
  }

  // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log(`ü§ñ Running ${type} automation`);
  // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('='.repeat(60));
  // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('');

  const results = [];

  for (const task of tasks) {
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log(`‚ñ∂Ô∏è  ${task.name}...`);
    try {
      execSync(task.command, {
        cwd: BASE_DIR,
        stdio: 'inherit'
      });
      // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log(`‚úÖ ${task.name} completed\n`);
      results.push({ task: task.name, success: true });
    } catch (error) {
      // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log(`‚ùå ${task.name} failed\n`);
      results.push({ task: task.name, success: false, error: error.message });
    }
  }

  // Summary
  // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('üìä Summary:');
  const successful = results.filter(r => r.success).length;
  const failed = results.filter(r => !r.success).length;
  // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log(`   ‚úÖ Successful: ${successful}`);
  // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log(`   ‚ùå Failed: ${failed}`);

  if (failed > 0) {
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('\nFailed tasks:');
    results.filter(r => !r.success).forEach(r => {
      // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log(`   ‚Ä¢ ${r.task}`);
    });
    process.exit(1);
  }
}

async function main() {
  const type = process.argv[2];

  if (!type) {
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('ü§ñ Automation Runner');
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('='.repeat(60));
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('');
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('Usage: node automation-runner.mjs <type>');
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('');
    // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log('Available types:');
    Object.keys(AUTOMATIONS).forEach(key => {
      // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.log(`  ‚Ä¢ ${key} - ${AUTOMATIONS[key].length} tasks`);
    });
    process.exit(1);
  }

  await runAutomation(type);
}

main().catch(error => {
  // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // // console.error('‚ùå Error:', error.message);
  process.exit(1);
});

