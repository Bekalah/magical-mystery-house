{
  "name": "@cathedral/circuitum99-arcanae-cyoa",
  "version": "1.0.0",
  "description": "Circuitum99: Alpha et Omega CYOA Story System for Liber Arcanae",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "story": "node dist/story/storyEngine.js",
    "random": "node dist/modes/randomMode.js",
    "auto": "node dist/modes/autoGameMode.js",
    "design": "node dist/modes/designMode.js",
    "theatre": "node dist/theatre/paraTheatreEngine.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx} --max-warnings=0",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build",
    "clean:all": "rimraf dist build node_modules/.turbo",
    "validate": "npm run type-check && npm run lint && npm run test",
    "validate:ci": "npm run type-check && npm run lint && npm run test:coverage",
    "benchmark": "vitest run --reporter=verbose --reporter=json --outputFile=benchmark-results.json",
    "validate:sacred-math": "node scripts/validate-sacred-math.js",
    "validate:trauma-safety": "node scripts/validate-trauma-safety.js",
    "validate:integration": "node scripts/validate-integration.js",
    "validate:ownership": "node scripts/validate-ownership.js"
  },
  "dependencies": {
    "@cathedral/codex-144-99": "workspace:*",
    "@cathedral/liber-arcanae": "workspace:*",
    "@cathedral/plugin-system": "workspace:*",
    "@cathedral/shared": "workspace:*",
    "typescript": "^5.3.0",
    "@cathedral/codex-library": "workspace:*",
    "@cathedral/circuitum99-core": "workspace:*",
    "@cathedral/circuitum99-arcanae-cyoa": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.6.2",
    "tsx": "^4.19.1",
    "vitest": "^2.1.1",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint-config-prettier": "^9.1.0"
  },
  "keywords": [
    "circuitum99",
    "cyoa",
    "interactive-story",
    "alpha-et-omega",
    "liber-arcanae",
    "para-theatre",
    "sacred-storytelling",
    "rebecca-respawn"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "license": "CC0-1.0",
  "consolidated": true,
  "consolidatedAt": "2025-12-01T21:19:18.337Z",
  "packageManager": "pnpm@10.23.0",
  "alchemical": {
    "name": "Circuitum99 Arcanae Cyoa",
    "symbol": "⊙",
    "label": "⊙ Circuitum99 Arcanae Cyoa (@cathedral/circuitum99-arcanae-cyoa)"
  },
  "publishConfig": {
    "access": "public"
  },
  "cathedral": {
    "sacred_mathematics": {
      "sacredGeometry": true,
      "goldenRatio": 1.618,
      "cathedralRatio": 1.455,
      "fibonacciGrids": true,
      "divineProportions": true
    },
    "trauma_safety": {
      "noAutoplay": true,
      "escExit": true,
      "motionControls": true,
      "intensityAdjustment": true,
      "gentleDefaults": true,
      "undoRedo": true
    },
    "design_philosophy": {
      "flowingInterfaces": true,
      "energyRibbons": true,
      "breathingAnimations": true,
      "sacredColors": true,
      "archetypalForms": true
    },
    "integration": {
      "connects_to": [
        "circuitum99-core",
        "circuitum99-arcanae-cyoa",
        "liber-arcanae",
        "liber-arcanae-core"
      ]
    }
  }
}
