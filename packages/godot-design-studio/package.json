{
  "name": "@cathedral/godot-design-studio",
  "version": "1.0.0",
  "description": "Free Godot Design Studio - Figma-like design tools for mystical interfaces",
  "main": "design_studio.gd",
  "type": "module",
  "scripts": {
    "build": "echo 'Building Godot Design Studio...' && mkdir -p dist && cp -r scenes scripts tools dist/",
    "validate": "echo 'Validating design tools...' && node validate-design.js",
    "export": "echo 'Exporting design tools...' && pnpm run build",
    "test": "echo 'Testing design workflows...' && node test-design.js",
    "dev": "tsx watch src/index.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx} --max-warnings=0",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build",
    "clean:all": "rimraf dist build node_modules/.turbo",
    "validate:ci": "npm run type-check && npm run lint && npm run test:coverage",
    "benchmark": "vitest run --reporter=verbose --reporter=json --outputFile=benchmark-results.json",
    "validate:sacred-math": "node scripts/validate-sacred-math.js",
    "validate:trauma-safety": "node scripts/validate-trauma-safety.js",
    "validate:integration": "node scripts/validate-integration.js",
    "validate:ownership": "node scripts/validate-ownership.js"
  },
  "keywords": [
    "godot",
    "design-studio",
    "figma-alternative",
    "ui-design",
    "trauma-safe",
    "free",
    "open-source",
    "cathedral-of-circuits",
    "mystical-design",
    "sacred-geometry",
    "cathedral-network",
    "visionary"
  ],
  "author": "Rebecca Respawn <bekalah@users.noreply.github.com>",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bekalah/cathedral.git",
    "directory": "packages/godot-design-studio"
  },
  "homepage": "https://bekalah.github.io/cathedral/godot-design-studio",
  "godot": {
    "version": "4.3+",
    "compatibility": "4.0+",
    "asset_type": "design_tool",
    "themes": [
      "design_studio",
      "mystical_ui",
      "trauma_safe",
      "sacred_proportions"
    ]
  },
  "cathedral": {
    "sacred_mathematics": {
      "golden_ratio": 1.618,
      "144_99_ratio": 1.455,
      "fibonacci_grids": true,
      "divine_proportions": true
    },
    "trauma_safety": {
      "no_autoplay": true,
      "esc_exit": true,
      "motion_controls": true,
      "intensity_adjustment": true,
      "gentle_defaults": true,
      "undo_redo": true
    },
    "design_philosophy": {
      "flowing_interfaces": true,
      "energy_ribbons": true,
      "breathing_animations": true,
      "sacred_colors": true,
      "archetypal_forms": true
    },
    "integration": {
      "connects_to": [
        "godot-vfx-library",
        "godot-codex-14499",
        "godot-liber-arcanae",
        "circuitum99-core",
        "circuitum99-arcanae-cyoa",
        "mystery-house-core",
        "stone-grimoire",
        "stone-grimoire-core",
        "stone-grimoire-library-engine",
        "liber-arcanae",
        "liber-arcanae-core",
        "liber-arcanae-tools",
        "codex-144-99",
        "codex-144-99-core"
      ]
    },
    "mode": "VISIONARY",
    "quality": "Gold Standard A+",
    "status": "Active"
  },
  "files": [
    "scenes/",
    "scripts/",
    "tools/",
    "templates/",
    "components/",
    "documentation/",
    "examples/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "vitest": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0"
  },
  "engines": {
    "node": "*",
    "pnpm": "*"
  },
  "packageManager": "pnpm@10.23.0",
  "publishConfig": {
    "access": "public"
  },
  "types": "dist/index.d.ts",
  "alchemical": {
    "name": "Godot Design Studio",
    "symbol": "⊙",
    "label": "⊙ Godot Design Studio (@cathedral/godot-design-studio)"
  },
  "dependencies": {
    "@cathedral/circuitum99-core": "workspace:*",
    "@cathedral/circuitum99-arcanae-cyoa": "workspace:*",
    "@cathedral/mystery-house-core": "workspace:*",
    "@cathedral/stone-grimoire": "workspace:*",
    "@cathedral/stone-grimoire-core": "workspace:*",
    "@cathedral/stone-grimoire-library-engine": "workspace:*",
    "@cathedral/liber-arcanae": "workspace:*",
    "@cathedral/liber-arcanae-core": "workspace:*",
    "@cathedral/liber-arcanae-tools": "workspace:*",
    "@cathedral/codex-144-99": "workspace:*",
    "codex-144-99-core": "workspace:*",
    "typescript": "^5.6.2",
    "tsx": "^4.19.1",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "eslint-config-prettier": "^9.1.0"
  },
  "consolidated": true,
  "consolidatedAt": "2025-12-04T22:13:01.436Z"
}
