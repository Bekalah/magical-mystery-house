{
  "name": "@cathedral-trinity/accessibility",
  "version": "1.0.0",
  "description": "Cathedral v1.0 Universal Accessibility Engine - ND Support, Cognitive Load Optimization, Trauma-Safe Environments",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./nd-support": {
      "import": "./dist/NDSupport.js",
      "require": "./dist/NDSupport.cjs",
      "types": "./dist/NDSupport.d.ts"
    },
    "/trauma-safe": {
      "import": "./dist/TraumaSafe.js",
      "require": "./dist/TraumaSafe.cjs",
      "types": "./dist/TraumaSafe.d.ts"
    },
    "/cognitive-optimization": {
      "import": "./dist/CognitiveOptimization.js",
      "require": "./dist/CognitiveOptimization.cjs",
      "types": "./dist/CognitiveOptimization.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node scripts/build.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run src/**/*.test.ts",
    "test:watch": "vitest src/**/*.test.ts",
    "test:coverage": "vitest run --coverage src/**/*.test.ts",
    "test:accessibility": "vitest run src/**/accessibility*.test.ts",
    "test:trauma-safe": "vitest run src/**/trauma*.test.ts",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "setup": "tsc --declaration",
    "status": "node scripts/status.js",
    "validate": "npm run test && npm run lint",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "type-check": "tsc --noEmit",
    "clean:all": "rimraf dist build node_modules/.turbo",
    "validate:ci": "npm run type-check && npm run lint && npm run test:coverage",
    "benchmark": "vitest run --reporter=verbose --reporter=json --outputFile=benchmark-results.json",
    "validate:sacred-math": "node scripts/validate-sacred-math.js",
    "validate:trauma-safety": "node scripts/validate-trauma-safety.js",
    "validate:integration": "node scripts/validate-integration.js",
    "validate:ownership": "node scripts/validate-ownership.js"
  },
