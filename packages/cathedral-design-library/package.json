{
  "name": "@cathedral/design-library",
  "version": "1.0.0",
  "description": "Figma-style design library integrating Codex 144:99, Liber Arcanae, and Fusion Kink",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "design": "node dist/design/designStudio.js",
    "components": "node dist/components/generateComponents.js",
    "palettes": "node dist/colors/sacredPalettes.js",
    "patterns": "node dist/patterns/sacredPatterns.js",
    "export": "node dist/export/exportDesigns.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx} --max-warnings=0",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build",
    "clean:all": "rimraf dist build node_modules/.turbo",
    "validate": "npm run type-check && npm run lint && npm run test",
    "validate:ci": "npm run type-check && npm run lint && npm run test:coverage",
    "benchmark": "vitest run --reporter=verbose --reporter=json --outputFile=benchmark-results.json",
    "validate:sacred-math": "node scripts/validate-sacred-math.js",
    "validate:trauma-safety": "node scripts/validate-trauma-safety.js",
    "validate:integration": "node scripts/validate-integration.js",
    "validate:ownership": "node scripts/validate-ownership.js"
  },
  "dependencies": {
    "@cathedral/codex-144-99": "workspace:*",
    "@cathedral/liber-arcanae": "workspace:*",
    "@cathedral/plugin-system": "workspace:*",
    "@cathedral/shared": "workspace:*",
    "canvas": "^2.11.2",
    "typescript": "^5.3.0",
    "@cathedral/master-art-principles": "workspace:*",
    "@cathedral/codex-library": "workspace:*",
    "@cathedral/circuitum99-core": "workspace:*",
    "@cathedral/circuitum99-arcanae-cyoa": "workspace:*",
    "@cathedral/mystery-house-core": "workspace:*",
    "@cathedral/stone-grimoire": "workspace:*",
    "@cathedral/stone-grimoire-core": "workspace:*",
    "@cathedral/stone-grimoire-library-engine": "workspace:*",
    "@cathedral/liber-arcanae-core": "workspace:*",
    "@cathedral/liber-arcanae-tools": "workspace:*",
    "@cathedral/codex-144-99-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/canvas": "^2.11.0",
    "typescript": "^5.6.2",
    "tsx": "^4.19.1",
    "vitest": "^2.1.1",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint-config-prettier": "^9.1.0"
  },
  "keywords": [
    "design-library",
    "figma-alternative",
    "sacred-design",
    "codex-144-99",
    "liber-arcanae",
    "fusion-kink",
    "sacred-geometry",
    "design-system"
  ],
  "engines": {
    "node": "*",
    "pnpm": "*"
  },
  "license": "CC0-1.0",
  "packageManager": "pnpm@10.23.0",
  "publishConfig": {
    "access": "public"
  },
  "alchemical": {
    "name": "Design Library",
    "symbol": "⊙",
    "label": "⊙ Design Library (@cathedral/design-library)"
  },
  "consolidated": true,
  "consolidatedAt": "2025-12-01T19:36:41.794Z",
  "cathedral": {
    "sacred_mathematics": {
      "sacredGeometry": true,
      "goldenRatio": 1.618,
      "cathedralRatio": 1.455,
      "fibonacciGrids": true,
      "divineProportions": true
    },
    "trauma_safety": {
      "noAutoplay": true,
      "escExit": true,
      "motionControls": true,
      "intensityAdjustment": true,
      "gentleDefaults": true,
      "undoRedo": true
    },
    "design_philosophy": {
      "flowingInterfaces": true,
      "energyRibbons": true,
      "breathingAnimations": true,
      "sacredColors": true,
      "archetypalForms": true
    },
    "integration": {
      "connects_to": [
        "circuitum99-core",
        "circuitum99-arcanae-cyoa",
        "mystery-house-core",
        "stone-grimoire",
        "stone-grimoire-core",
        "stone-grimoire-library-engine",
        "liber-arcanae",
        "liber-arcanae-core",
        "liber-arcanae-tools",
        "codex-144-99",
        "codex-144-99-core"
      ]
    }
  }
}
